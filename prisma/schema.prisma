generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id           String   @id @default(uuid())
  title        String
  content      String
  image_url    String
  auther_id    String
  auther_name  String
  auther_image String
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
}
